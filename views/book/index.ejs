<%- include("../partials/header") %>

<div class="container">
    <div class="jumbotron">
        <br class="mt-5">
        <p class="lead">Are you looking for</p>
        <h1 class="display-4"> information on dataviz literacy?</h1>
        <hr class="mt-5">
        <p class="d-inline">Here's a collection of dataviz books everyone should read.</p>
        <a class="btn btn-blue btn-sm mt-4 mt-md-0 float-md-right" href="/books/new" role="button"> <i class="fas fa-plus"></i>  add a book</a>
    </div>
    <div class="container">
        <div class="row">
            <% books.forEach(book => { %>
                <div class="col-sm-12 col-md-6 col-lg-3 mt-5">
                    <div class="card w-100">
                        <div class="container-card-image">
                            <a href="<%= book.url %>" target="_blank">
                                <img src="<%= book.thumbnail_url %>" class="card-img-top" alt="thumbnail image">
                                <div class="card-image-icon">
                                    <div><i class="fab fa-amazon"></i></div>
                                </div>
                            </a>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title"> <%= book.title %> </h6>
                            <p class="card-subtitle mb-3 font-weight-lighter"> <%= book.author %> (<%= book.year %>) </p>
                            <p class="card-text text-muted"> <%= book.description %> </p>
                            <form class="d-inline" action="/books/<%= book.id %>/edit">
                                <button class="btn btn-grey p-0" class="card-link"><i class="far fa-edit"></i></button>
                            </form>
                            <form class="d-inline" action="/books/<%= book.id %>?_method=DELETE" method="POST">
                                <button class="btn btn-grey p-0" ><i class="far fa-trash-alt"></i></button>
                            </form>
                        </div>
                    </div>
                </div>
            <% });  %>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>