<div id="modalCommentEdit" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title text-xs-center">Update your comment</h4>
            </div>
            <div class="modal-body">
                <form class="d-inline" action="/vis/<%= chart.id %>/comments/<%= comment.id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="text"></label>
                        <textarea type="text" class="form-control" id="text" name="text" required> <%= comment.text %></textarea>
                    </div>
                    <div class="form-group">
                        <div>
                            <button type="submit" class="btn btn-blue"> Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->