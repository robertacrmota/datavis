<%- include("partials/header") %>
<%- include("partials/loginModal") %>

<div style="min-height: 100vh; min-height: 100%;" class="d-flex align-items-center">
    <div class="container">
        <div class="card mx-auto">
            <div class="card-body">
                <h3 class="card-title">New user</h3>
                <p class="card-text">If you're not registered yet, get an account and contribute to our dataviz repertoire.</p>
                <form action="/signup" method="POST">
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input type="email" class="form-control" id="username" name="username" placeholder="Enter email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    </div>
                    <button type="submit" class="btn btn-blue">Submit</button>
                </form>
                <br>
                <div class="modal-footer text-xs-center pb-0">
                    Already have an account? <a class="btn btn-blue" href="#" role="button" data-toggle="modal" data-target="#modalLogIn">Log in Â»</a>
                </div>
            </div>
        </div>
    </div>
</div>


